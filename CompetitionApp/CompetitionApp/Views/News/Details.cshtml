@model CompetitionApp.Models.News

@{
    ViewData["Title"] = "Details";
}

<h1 class="admin-model-header">Деталі новини</h1>

<div>

    <hr />
    <div class="col-sm-4">
        @if (Model.Image == null)
        {
            <img class="info-photo" src="~/img/chess.jpg" alt="Новина">
        }
        else
        {
            <img class="info-photo" alt="Новина" src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Image))" />
        }
    </div>

    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PublicationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PublicationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PublicatorId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PublicatorId)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Редагувати</a> |
    <a asp-action="Index">Повернутися</a>
</div>
