@using CompetitionApp.Models
@model IndexView
@addTagHelper *, CompetitionApp
@{
    ViewData["Title"] = "Home Page";
}

    <div class="home-content">
        <h1 class="home-title">Новини</h1>
        <li class="news">
            @foreach (NewsImage item in Model.NewsImage)
            {
                <ul class="news-item">
                    <div class="news-photo">
                        <img src="~/img/chess.jpg" alt="Новина">
                    </div>
                    <div class="news-content">
                        <p class="news-title">
                            @item.News.Title
                        </p>
                        <div class="news-about">
                            <a class="btn btn-dark news-btn text-white">Переглянути</a>
                            <p class="news-date">Опубліковано: @item.News.PublicationDate</p>
                        </div>
                    </div>
                </ul>
            }
        </li>
        <page-link page-model="Model.PageView" page-action="Index"></page-link>
    </div>

